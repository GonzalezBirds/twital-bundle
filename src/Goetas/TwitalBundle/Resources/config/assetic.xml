<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">




	<parameters>
		<parameter key="twital.extension.assetic.class">Goetas\Twital\Extension\AsseticExtension</parameter>
		<parameter key="twital.extension.assetic.class">Goetas\Twital\Extension\AsseticExtension</parameter>
	</parameters>

	<services>

		<service id="twital.assetic.php_formula_loader" class="%assetic.cached_formula_loader.class%" public="false">
			<tag name="assetic.formula_loader" alias="twital" />
			<argument type="service" id="twital.assetic.formula_loader.real" />
			<argument type="service" id="assetic.config_cache" />
			<argument>%kernel.debug%</argument>
		</service>

		<service id="twital.assetic.formula_loader.real" class="Goetas\TwitalBundle\Assetic\TwitalAsseticLoader">
			<argument type="service" id="assetic.asset_factory" />
		</service>
		<service id="twital.extension.assetic" class="Goetas\TwitalBundle\Plugins\Assetic" public="false">
			<argument type="service" id="service_container" />
			<tag name="templating.engine.twital.extension" />
		</service>
	</services>
</container>
